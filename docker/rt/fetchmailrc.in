set no syslog
set logfile /var/log/fetchmail.log

set postmaster "fetchmail"

set daemon 300

poll outlook.office365.com with proto POP3
  auth password
  user ${O365_USER}
  pass ${O365_PASS} ssl
  keep
  mda "/opt/rt4/bin/rt-mailgate --url http://${SERVICE_ADDRESS}:8080/ --queue general"

